<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="点击切换下一批" />

    <link.fls.swipestack.SwipeStack
        android:id="@+id/find_swip_stack"
        android:layout_width="551pt"
        android:layout_height="800pt"
        android:layout_centerInParent="true"
        android:layout_marginTop="66pt"
        android:padding="10dp"
        app:animation_duration="300"
        app:stack_rotation="0"
        app:stack_size="3"
        app:swipe_rotation="15"></link.fls.swipestack.SwipeStack>


    <Button
        android:id="@+id/find_btn"
        android:layout_width="139pt"
        android:layout_height="60pt"
        android:layout_below="@id/find_swip_stack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60pt"
        android:text="换一批" />

</RelativeLayout>